<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.fragments.films.detail.FilmsDetailListFragment">

    <TextView
        android:id="@+id/film_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Castle in the Sky"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/original_film_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="天空の城ラピュタ"
        android:textAlignment="center"
        android:textSize="11dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="15dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/film_icon_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/black"

            />

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/film_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The orphan Sheeta inherited a mysterious crystal that links her to the mythical sky-kingdom of Laputa. With the help of resourceful Pazu and a rollicking band of sky pirates, she makes her way to the ruins of the once-great civilization. Sheeta and Pazu must outwit the evil Muska, who plans to use Laputa's science to make himself ruler of the world."
        android:textAlignment="center"
        android:textSize="11dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director: "
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/director_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hayao Miyazaki"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producer: "
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/producer_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isao Takahata"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release Date: "
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/release_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1986"
            android:textSize="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Time: "
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/running_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="124 years"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: "
            android:textColor="@android:color/holo_orange_light"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/film_rating_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="95"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/exit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit"/>

</LinearLayout>
